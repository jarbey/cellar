{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>AFSY - WebSockets and Symfony</h1>
		<div id="ws-content-receiver">
			Connecting...
		</div>
	</div>

	<table>
		{% for sensor in db.sensors %}
			<tr>
				<td><img src="/api/{{ db.id }}/sensors/{{ sensor.id }}/graph/temperature?t={{ date|date('U') }}" /></td>
				<td><img src="/api/{{ db.id }}/sensors/{{ sensor.id }}/graph/humidity?t={{ date|date('U') }}" /></td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		var wsUrl = '{{ ws_url }}';
	</script>
	<script type="text/javascript" src="{{ asset('/sf-websocket.js') }}"></script>
{% endblock %}